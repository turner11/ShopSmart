@model IEnumerable<ShopSmart.Common.ShoplistItemCandidate>


<p>
    @*@Html.ActionLink("Create New", "Create")*@
    @System.Web.Optimization.BundleTable.Bundles.GetBundleFor("~/Scripts")
    @Scripts.Render("~/bundles/ShoplistBase")
</p>

    <table class="table">
        <tr>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.Id)
                @*@Html.TextBoxFor(model => model.Id, new { @class = "hidden" })*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToBuy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Main)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
            <tr>
                <td class="hidden">
                    @Html.TextBoxFor(modelItem => item.Id, new { @class = "text-box single-line disabled hidden" })
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.ToBuy, new { @class = "chkToBuy", click = "TableToJson()" })
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => item.Quantity, new { @class = "text-box single-line totalElementChanged txbQuantity", type = "number" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => item.Price, new { @class = "text-box single-line txbPrice disabled" })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Main)
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => item.TotalCost, new { @class = "text-box single-line txbTotalCost disabled" })

                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>*@
            </tr>
    }
        
    </table>
